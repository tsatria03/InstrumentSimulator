if (direction==1)
{
if(mallitindex>-1)
mallitindex--;
if(mallitindex<0)
mallitindex=piano.length()-1;
}
else if (direction==2)
{
if(mallitindex>-1)
mallitindex++;
if(mallitindex>=piano.length())
